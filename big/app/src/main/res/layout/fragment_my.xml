<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/head_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/i1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:textColor="#0C0C0C"
        app:layout_constraintLeft_toRightOf="@+id/head_image"
        app:layout_constraintTop_toTopOf="@+id/head_image" />

    <TextView
        android:id="@+id/number_setting"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="学号：20172481025"
        android:textColor="#0C0C0C"
        app:layout_constraintTop_toBottomOf="@+id/head_image" />

    <TextView
        android:id="@+id/password_setting"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="密码管理"
        android:textColor="#0C0C0C"
        app:layout_constraintTop_toBottomOf="@+id/number_setting" />

    <TextView
        android:id="@+id/school_setting"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="学校：华南师范大学"
        android:textColor="#0C0C0C"
        app:layout_constraintTop_toBottomOf="@+id/password_setting" />

    <TextView
        android:id="@+id/xueyuan_setting"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="学院：计算机学院"
        android:textColor="#0C0C0C"
        app:layout_constraintTop_toBottomOf="@+id/school_setting" />

    <TextView
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:gravity="center"
        android:text="资料设置"
        android:textColor="#0C0C0C"
        app:layout_constraintTop_toBottomOf="@+id/xueyuan_setting" />

    <TextView
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:gravity="center"
        android:text="关于我们"
        android:textColor="#0C0C0C"
        app:layout_constraintTop_toBottomOf="@+id/setting" />

    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/buttonstytle"
        android:text="退出登录"
        app:layout_constraintTop_toBottomOf="@+id/about_us" />

</androidx.constraintlayout.widget.ConstraintLayout>